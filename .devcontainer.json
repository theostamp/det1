{
    "name": "Windows Development Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "runArgs": ["--platform=windows/amd64"],
    "settings": {
        "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe"
    },
    "extensions": [
        "ms-vscode.cpptools",
        "ms-python.python"
    ],
    "remoteUser": "root"
}
